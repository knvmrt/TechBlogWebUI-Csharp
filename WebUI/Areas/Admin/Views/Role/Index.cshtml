@model List<Microsoft.AspNetCore.Identity.IdentityRole>
@{
    int counter = 0;
}
<a href="/admin/role/create" class="btn btn-success mb-3"> <i class="fa-solid fa-plus"></i> Create</a>
<table class="table table-striped table-bordered table-hover">

    <thead>
        <tr>
            <th>#</th>
            <th>Rol name</th>
        </tr>
    </thead>
    <tbody>

        @foreach(var item in Model)
        {
            counter++;
            <tr>
                <td>@counter</td>
                <td>@item.Name</td>
            </tr>

        }

    </tbody>

</table>
